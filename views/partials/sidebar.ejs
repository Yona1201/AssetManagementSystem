<script>

  function logout() {
    sessionStorage.clear();
    window.location = "/auth"
  }

  function setActiveLink() {
    const currentUrl = window.location.pathname; // Mendapatkan URL saat ini tanpa domain
    const links = document.querySelectorAll('a'); // Pilih semua tautan di dalam card-body

    links.forEach(link => {
      const href = link.getAttribute('href'); // Mendapatkan nilai atribut href
      if (href === currentUrl) {
        link.classList.add('active'); // Tambahkan kelas "active" jika href sesuai dengan URL saat ini
      } else {
        link.classList.remove('active'); // Hapus kelas "active" jika href tidak sesuai
      }
    });
  }

  // Panggil setActiveLink saat halaman dimuat
  window.addEventListener('DOMContentLoaded', setActiveLink);
</script>